---
import logo from '../assets/logo.png';
import iconPhone from '../assets/icon-phone.svg';
---
<footer class="footer">
    <div class="wrap">
        <div class="footer__content">
            <div class="footer__col">
              <img src={logo.src} width="29px" height="32px" alt="E-veselības logotips" itemprop="logo"/>
              <address>
                Nacionālais veselības dienests<br>
                Cēsu iela 31 k-3, 6. ieeja, Rīga, LV-1012
              </address>
            </div>
            <div class="footer__col">
              <div class="footer__info">
                <div itemscope itemtype="https://schema.org/Organization">
                  <p itemprop="name">E-veselības atbalsta dienests</p>
                  <p class="footer__call">
                    <a href="tel:+37122812313" itemprop="telephone" aria-label="Call E-veselības atbalsta dienests at +371 2281 2313">
                      +371 2281 2313
                    </a>
                    <img src={iconPhone.src} alt="Telfona ikona"/>
                  </p>
                </div>
              </div>
              <a class="footer__link link link--underline" href="#" title="Iet uz piekļūstamības paziņojuma portālu" target="_blank" rel="noopener noreferrer">Pieklūstamības paziņojums</a>
            </div>
        </div>
    </div>
</footer>

<style lang="scss">
  .footer {
    padding: 24px 0 56px;
    background-color: var(--background-dark);
    color: var(--text-secondary);

    address {
      margin-top: 40px;
      font-style: normal;
    }

    &__call {
      display: flex;
      justify-content: space-between;
    }

    &__info {
      margin-top: 40px;
      padding: 24px 40px 24px 24px;
      background-color: var(--layer-01-dark);
      border: 1px solid var(--border-subtle-01-dark);
      font-style: normal;
      font-size: 18px;

      a {
        color: var(--text-on-color);
        font-weight: bold;

        &:hover {
          text-decoration: underline;
        }
      }
    }

    &__link {
      margin-top: 40px;
      color: var(--link-primary);
      display: inline-block;
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: 21px;
      text-decoration: underline;
    }

    @media (min-width: 1024px) {
      padding-bottom: 96px;
      
      &__content {
          display: flex;
          gap: 16px;
      }

      &__col {
          flex: 1;
      }

      &__info {
        margin-top: 0;
      }

      &__link {
        margin-top: 16px;
      }
    }
  }
</style>