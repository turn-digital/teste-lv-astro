---
import logoFigma from '../assets/figma-logo.png';
import AppStoreButton from './social-buttons/AppStore.astro';
import PlayStoreButton from './social-buttons/PlayStore.astro';
---
<div class="banner" itemscope itemtype="https://schema.org/CreativeWork">
    <!-- Figma Logo -->
    <div itemscope itemtype="https://schema.org/Organization" itemprop="creator">
        <img 
            src={logoFigma.src} 
            alt="Figma logo" 
            width="22px" 
            height="32px" 
            itemprop="logo" 
        />
    </div>

    <!-- Banner Text -->
    <h4 itemprop="description">
        Lai prototipu būtu ērtāk lietot, lejupielādē Figma mobilo lietotni!
    </h4>

    <!-- User Reviews Section (Schema.org) -->
    <div itemscope itemtype="https://schema.org/Review">
        <meta itemprop="itemReviewed" content="Figma mobile app" />
        
        <div itemscope itemtype="https://schema.org/Rating">
            <meta itemprop="worstRating" content="1" />
            <meta itemprop="bestRating" content="5" />
            <meta itemprop="ratingValue" content="5" />
            <p itemprop="reviewBody" style="display: none;">Šī ir lieliska lietotne, lai apskatītu un rediģētu prototipus! Ļoti ērta un viegli lietojama.</p>
        </div>
        <meta itemprop="datePublished" content="2024-12-13" />
    </div>

    <!-- Buttons for App Stores -->
    <div class="banner__buttons">
        <!-- App Store Button -->
        <AppStoreButton/>
      
        <!-- Google Play Button -->
         <PlayStoreButton/>
    </div>
</div>

<style lang="scss">
    .banner {
        margin: 24px 0;
        padding: 24px;
        border: 1px solid var(--border-subtle-01-light);
        background-color: var(--layer-01-light);

        h4 {
            margin: 16px 0 24px;
        }

        &__buttons {
            margin-top: 24px;
            display: flex;
            gap: 8px;

            img {
                display: block;
                width: 120px;
                height: 40px;
            }
        }
    }
</style>